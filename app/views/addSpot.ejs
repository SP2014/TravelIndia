<!DOCTYPE HTML>
<html ng-app="myApp" lang="en">
<head>
    <title>TravelIndia - Add a Spot</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/stylesheets/angular-material.css">
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/trix/0.9.2/trix.css">
    <link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Roboto:400,500,700,400italic'>
    <style type="text/css">
        /**
         * Hide when Angular is not yet loaded and initialized
         */
        [ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak {
            display: none !important;
        }
    </style>
</head>
<body ng-cloak>

 <div ui-view layout="row" layout-fill ng-controller="addSpotController as aSC">
     <!-- Sidenav -->
     <md-sidenav class="site-sidenav md-sidenav-left md-whiteframe-z2"
                 md-component-id="left"
                 ng-click="ul.toggleList()" aria-label="Show User List"
                 md-is-locked-open="$mdMedia('gt-sm')" style="width: 100px">

         <md-toolbar md-theme="custom" class="md-hue-1 md-whiteframe-z1">
             <md-button layout="row" layout-align="center center" class="md-toolbar-tools md-warn"
                        href="">
                 <h1>TI</h1>
             </md-button>
         </md-toolbar>

         <md-list>
             <md-list-item ng-repeat="it in ul.users">
                 <md-button ng-click="ul.selectUser(it)" ng-class="{'selected' : it === ul.selected }">
                     <md-icon md-svg-icon="{{it.avatar}}" class="avatar"></md-icon>
                     {{it.name}}
                 </md-button>
             </md-list-item>
         </md-list>

     </md-sidenav>

     <div flex layout="column" tabIndex="-1" role="main" class="md-whiteframe-z2">

         <md-toolbar layout="row" layout-align="end center" class="md-whiteframe-z1">
             <md-button hide-sm hide-xs class="md-icon-button" aria-label="Search">
                 <md-icon md-svg-icon="search" ></md-icon>
             </md-button>
             <md-button hide-sm hide-xs class="md-icon-button" aria-label="Notifications">
                 <md-icon md-svg-icon="notification" ></md-icon>
                 <span class="notifications-label">7</span>
             </md-button>
             <md-button hide-sm hide-xs class="md-icon-button" aria-label="Menu" ng-click="vm.toggleRightSidebar()">
                 <md-icon md-svg-icon="menu" ></md-icon>
             </md-button>
             <md-button class="md-icon-button" hide-gt-sm ng-click="vm.toggleItemsList()" aria-label="Menu">
                 <md-icon md-svg-icon="menu"></md-icon>
             </md-button>
         </md-toolbar>

         <md-content id="content" layout-padding>
             <div layout="row" layout-padding layout-wrap layout-fill>
                 <md-whiteframe class="md-whiteframe-1dp" layout-fill style="padding: 0;">
                     <div layout="row" layout-xs="column">
                         <div flex="60" style="background: #ebebeb;">
                             <md-toolbar>
                                 <div class="md-toolbar-tools">
                                     <md-button class="md-icon-button" aria-label="Add">
                                         <md-icon md-svg-icon="add"></md-icon>
                                     </md-button>
                                     <h2>
                                         <span>{{ aSC.headerTitle }}</span>
                                     </h2>
                                     <span flex></span>
                                 </div>
                             </md-toolbar>


                             <md-content class="autoScroll" layout-padding>
                                 <form name="addForm">
                                  <md-input-container class="md-icon-float md-block">
                                     <label>Spot name</label>
                                     <md-icon md-svg-icon="terrain" class="name"></md-icon>
                                     <input ng-model="name" type="text" ng-change="change()">
                                  </md-input-container>
                                  <div layout-gt-sm="row">
                                         <md-input-container class="md-block" flex-gt-sm>
                                             <label>City</label>
                                             <md-icon md-svg-icon="city" class="name"></md-icon>
                                             <input ng-model="city" ng-change="change()">
                                         </md-input-container>
                                         <md-input-container class="md-block" flex-gt-sm>
                                             <label>State</label>
                                             <md-icon md-svg-icon="state" class="name"></md-icon>
                                             <input ng-model="state" ng-change="change()">
                                         </md-input-container>
                                     </div>
                                  <md-input-container class="md-block" flex-gt-xs>
                                      <label>Co-ordinates</label>
                                      <md-icon md-svg-icon="place" class="name"></md-icon>
                                      <input ng-model="coordinate" value="{{ mymap.getCenter().lat() }}" disabled="true">
                                      <span ng-bind="">{{ mymap.getCenter().lat() }}</span>
                                  </md-input-container>

                                  <label>Description and History</label>
                                  <trix-editor angular-trix ng-model="foo"></trix-editor>

                                     <md-chips
                                             ng-model="tags"
                                             readonly="ctrl.readonly"
                                             placeholder="Categories"
                                             delete-button-label="Remove Tag"
                                             delete-hint="Press delete to remove tag"
                                             secondary-placeholder="+Categories"></md-chips>
                                 </form>
                             </md-content>
                         </div>

                         <div flex="40" style="background: #006699;">
                             <div id="mapWrap"  style="width: 100%;height: 100%;">
                             <div map-lazy-load="https://maps.google.com/maps/api/js">
                                 <!--ng-map center="current-location" geo-fallback-center="28.8913703,79.5630639" zoom="5"
                                         on-center-changed="vm.centerChanged()" style="height: 585px;"-->
                                 <ng-map center="[{{ aSC.lat }}, {{ aSC.lng }}]" zoom="5" map-initialized="mycallback(map)" style="height: 585px;">
                                     <marker position="current" on-click="aSC.foo(2,3)"></marker>
                                 </ng-map>
                             </div>
                             </div>
                         </div>
                     </div>
                 </md-whiteframe>
             </div>

         </md-content>

     </div>

 </div>

  <script src="/javascripts/angular.js"></script>
  <script src="/javascripts/angular-animate.js"></script>
  <script src="/javascripts/angular-aria.js"></script>
  <script src="/javascripts/angular-material.js"></script>
  <script src="/scripts/app.js"></script>
  <script src="/scripts/index.js"></script>
  <script src="/scripts/ng-map.min.js"></script>
 <script src="/scripts/angular-trix.min.js"></script>
  <script src="/controllers/addSpotController.js"></script>
  <script src="/services/NavService.js"></script>
  <script src="https://maps.google.com/maps/api/js"></script>
  <script src="//cdnjs.cloudflare.com/ajax/libs/trix/0.9.2/trix.js"></script>
</body>
</html>